{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "chukyo-manabo-extensions",
    "description": "中京大学の学習支援ツールPassPalのブラウザ拡張機能",
    "icons": {
        "128": "images/extension_128.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "host_permissions": [
        "https://manabo.cnc.chukyo-u.ac.jp/*",
        "https://shib.chukyo-u.ac.jp/*",
        "https://cubics-pt-out.mng.chukyo-u.ac.jp/*",
        "https://cubics-as-out.mng.chukyo-u.ac.jp/*"
    ],
    "background": {
        "chromium:service_worker": "background.ts",
        "firefox:scripts": ["background.ts"]
    },
    "content_scripts": [
        {
            "js": ["src/Powerful_Syusseki_Caller.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/class/*"]
        },
        {
            "js": ["src/shib_login.js"],
            "matches": ["https://shib.chukyo-u.ac.jp/cloudlink/module.php/core/loginuserpass.php*"]
        },
        {
            "js": ["src/manabo_icon_jump.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/*"]
        },
        {
            "js": ["src/albo_relogin.js", "src/albo_error_login.js"],
            "matches": ["https://cubics-pt-out.mng.chukyo-u.ac.jp/uniprove_pt/*"]
        },
        {
            "js": ["src/manabo_relogin.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/close*"]
        },
        {
            "js": ["src/manabo_blue_jump.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/*"]
        },
        {
            "js": ["src/manabo_auto_poll.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/addon/survey/class/attend/*"]
        },
        {
          "js": ["src/video_controller.js"],
          "matches": ["https://manabo.cnc.chukyo-u.ac.jp/class/*"],
            "run_at": "document_idle"
        },
        {
          "js": ["src/dark_mode.js"],
          "css": ["css/dark_mode.css"],
          "matches": ["https://cubics-pt-out.mng.chukyo-u.ac.jp/*", "https://manabo.cnc.chukyo-u.ac.jp/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["src/resources/notify_caller.js"],
            "matches": ["https://manabo.cnc.chukyo-u.ac.jp/*"]
        },
        {
            "resources": ["css/dark_mode.css"],
            "matches": ["https://cubics-pt-out.mng.chukyo-u.ac.jp/*", "https://manabo.cnc.chukyo-u.ac.jp/*"]
        }
    ]
}
